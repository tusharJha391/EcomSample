<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/shop_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/store"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_image"
            style="?android:attr/ratingBarStyleSmall"
            android:scaleX="0.5"
            android:rating="5"
            android:scaleY="0.5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:max="5"
            android:isIndicator="true"
            android:layout_marginTop="5dp"
            android:stepSize=".5"
            android:progressTint="@color/golden_yellow"/>

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@+id/shop_image"
            android:layout_toRightOf="@+id/shop_image"
            android:fontFamily="serif"
            android:text="Shop Name"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/shop_image"
            android:drawableLeft="@drawable/placeholder_24"
            android:drawablePadding="2dp"
            android:fontFamily="sans-serif"
            android:maxLines="3"
            android:text="Address - Atta market, Sector-18, Noida, UP."
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shop_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/map_address"
            android:text="Open map"
            android:gravity="center"
            android:textSize="12sp"
            android:drawablePadding="10dp"
            android:layout_alignParentEnd="true"
            android:drawableStart="@drawable/map_address"
            android:textColor="@color/green_light"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>