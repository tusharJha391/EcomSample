<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_edit_fragment"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.allandroidprojects.sampleecomapp.fragments.EditFragment"
    android:focusable="true">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/id_child_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <android.support.design.circularreveal.cardview.CircularRevealCardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/cardview_image">
            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_man"/>


        </android.support.design.circularreveal.cardview.CircularRevealCardView>
        <ImageView
            android:id="@+id/camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview_image"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/cardview_image"
            app:srcCompat="@drawable/ic_camera_alt_black_24dp"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/camera_button">
            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UserName"/>
        </android.support.design.widget.TextInputLayout>
        <ImageView
            android:id="@+id/edit_name"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/text_input_layout"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text_input_layout"
            android:layout_below="@id/camera_button"
            android:layout_marginTop="45dp"
            app:srcCompat = "@drawable/ic_pencil_editprofile"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_second"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_input_layout"
            android:layout_centerHorizontal="true">
            <EditText
                android:id="@+id/email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_third"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_input_layout_second"
            android:layout_centerHorizontal="true">
            <EditText
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Change password"/>

        </android.support.design.widget.TextInputLayout>
        <ImageView
            android:id="@+id/icon_edit_password"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/text_input_layout_third"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text_input_layout"
            android:layout_below="@id/text_input_layout_second"
            android:layout_marginTop="40dp"
            app:srcCompat = "@drawable/ic_pencil_editprofile"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_forth"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_input_layout_third"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_number"
                android:hint="Change Number"/>

        </android.support.design.widget.TextInputLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_button_number"
            android:layout_below="@id/text_input_layout_third"
            app:srcCompat="@drawable/ic_pencil_editprofile"
            android:layout_toEndOf="@id/text_input_layout_forth"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="Save"
            android:textColor="@android:color/white"
            android:layout_below="@id/text_input_layout_forth"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            />



    </RelativeLayout>

</FrameLayout>

