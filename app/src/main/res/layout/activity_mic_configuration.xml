<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#eee"
            android:gravity="fill_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="32sp"
                android:layout_height="32sp"
                android:layout_margin="4sp"
                android:background="@drawable/icon" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="4sp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:text="@string/micConfig"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="visible" >

            <Spinner
                android:id="@+id/spinOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <LinearLayout
                android:id="@+id/test1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" >

                <EditText
                    android:id="@+id/txtSpeech"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="@string/sayHelloSpeech" >
                </EditText>

                <ImageButton
                    android:id="@+id/micButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="#FFFFFF"
                    android:onClick="MicClicked"
                    android:src="@drawable/micoff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/test2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/googleText"
                     android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="@string/sayHelloGoogle" />

                <ImageButton
                    android:id="@+id/micButton2"
                    android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		   		 	android:layout_margin="4dp"
		   			android:background="#FFFFFF"
		    		android:contentDescription="speak"
                    android:onClick="googleListening"
                    android:src="@drawable/micoff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/test3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone" >

                <Button
                    android:id="@+id/btnPlayBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:onClick="play"
                    android:padding="5dp"
                    android:text="@string/play" />

                <ImageButton
                    android:id="@+id/micButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="#FFFFFF"
                    android:onClick="recording"
                    android:padding="5dp"
                    android:src="@drawable/micoff" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtMicSt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Status: OFF" />

            <!-- scrollView -->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/ckOfflineSpeech"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/offlineSpeech" />

                    <CheckBox
                        android:id="@+id/ckDebug"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/debugger" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="11dp"
                        android:text="@string/micConfigurationInfo"
                        android:textColor="@color/dgrey"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </ScrollView>
            <!-- scrollView -->

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnNextTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:onClick="select"
            android:text="@string/select"
            android:textColor="@color/lgrey" />
    </LinearLayout>

  

</RelativeLayout>